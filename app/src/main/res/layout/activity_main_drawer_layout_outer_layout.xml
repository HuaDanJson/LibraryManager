<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--抽屉外面的部分-->
    <android.support.v7.widget.Toolbar
        android:id="@id/barTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="56dp">

            <ImageView
                android:id="@+id/ivMainActivityMenu"
                style="@style/TouchEventStyle"
                android:src="@drawable/community_icon_menu_nor_gules"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="@string/app_name"
                android:textColor="@color/video_manage_activity_select_all_text_color"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivMainActivityCamera"
                style="@style/TouchEventStyle"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_search"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadows"/>

    <RelativeLayout
        android:id="@+id/rl_search_main_activity"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/edt_search_main_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_bg"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="请输入书名"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/yellow87"
            android:textColorHint="@color/yellow87"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_search_main_activity"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="13dp"
            android:background="@color/yellow87"
            android:clickable="true"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_story_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="小说"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/btn_history_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="历史"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_philosophy_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="哲学"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/btn_politics_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="政治"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_finance_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="财经"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/btn_art_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="美术"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_technology_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="技术"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/btn_building_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="建筑"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_english_cet_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="英语四六级"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/btn_collection_main_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_register_false"
            android:gravity="center"
            android:padding="5dp"
            android:text="阅读过的书"
            android:textColor="#ffff00"
            android:textSize="19sp"/>

    </LinearLayout>

</LinearLayout>


