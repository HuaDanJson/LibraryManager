<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        app:contentInsetStart="0dp">

        <TextView
            android:id="@+id/tvRegisterActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="添加书籍"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll_text_add_book_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_picture_book_activity"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/first_book_cover"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/edt_book_name_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="书名"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/edt_writer_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="作者"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/edt_chu_ban_she_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="出版社"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/edt_chu_ban_time_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="出版时间"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/edt_introduce_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="简介"
                android:maxLines="1"
                android:singleLine="true"/>


            <EditText
                android:id="@+id/edt_value_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="内容"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/edt_remind_book_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="书本数"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btnRegisterActivitySubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_orange_selector"
                android:text="确认提交"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

