<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="298dp"
              android:orientation="vertical"
              tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/iv_item_book_list_adapter"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/first_book_cover"/>

    <TextView
        android:id="@+id/tv_title_book_list_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_writer_book_list_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_read_book_activity"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>